{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "allowJs": false,
    "checkJs": false,
    "declaration": true,
    "noEmit": false,
    "rootDir": "./src/",
    "outDir": "./lib/"
  },
  "include": ["src/**/*"],
  "exclude": ["/node_modules/", "src/**/*.test.ts"]
}